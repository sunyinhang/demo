<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <property name="APP_NAME" value="payplatform"/>
    <property name="FILE_PATTERN" value="./log/%d{yyyy-MM-dd}/${APP_NAME}.%d{yyyy-MM-dd}"/>
    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] [%X{Trace-Span-Id}] %-5level %logger{36} %L - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <appender name="LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${FILE_PATTERN}.log.gz</FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="ASYNC_LOG" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOG"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    <logger name="com.haiercash" level="info">
        <appender-ref ref="ASYNC_LOG"/>
    </logger>

    <appender name="REPORT_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${FILE_PATTERN}.report.log.gz</FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="ASYNC_REPORT_LOG" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="REPORT_LOG"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    <logger name="com.haiercash.payplatform.controller.ReportController" level="info">
        <appender-ref ref="ASYNC_REPORT_LOG"/>
    </logger>

    <appender name="TASK_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${FILE_PATTERN}.task.log.gz</FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="ASYNC_TASK_LOG" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="TASK_LOG"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    <logger name="com.haiercash.payplatform.tasks" level="info">
        <appender-ref ref="ASYNC_TASK_LOG"/>
    </logger>

    <appender name="TRACE_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${FILE_PATTERN}.trace.log.gz</FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="ASYNC_TRACE_LOG" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="TRACE_LOG"/>
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>
    <logger name="com.haiercash.spring.trace" level="info">
        <appender-ref ref="ASYNC_TRACE_LOG"/>
    </logger>
</configuration>
